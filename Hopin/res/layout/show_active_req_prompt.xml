<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/show_activereq_main_layout"
    android:layout_width="260dip"
    android:layout_height="wrap_content"
    android:background="@color/white"    
    android:orientation="vertical" 
    android:paddingBottom="5dip"   
    android:paddingLeft="5dip"
    android:paddingRight="5dip"
    android:paddingTop="5dip" >    

    <TextView
           
            android:layout_width="250dip"
            android:layout_height="wrap_content" 
            android:text="Load active request result?"   
            android:textColor="@color/white"
            android:textSize="20dip"
            android:padding="2.0dip"
            android:background="@drawable/gradient_green" 
            android:layout_marginBottom="10dip"
                      
             />
            
  <LinearLayout 
      android:id="@+id/show_active_req_instalayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">  
   <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20dip"
                android:text="Insta Request"
                android:layout_marginTop="5dip"
                android:layout_marginLeft="5dip"
                android:layout_gravity="center_horizontal" />
        
         
         <TextView
             android:id="@+id/show_active_req_instadetails"
             android:layout_width="match_parent"
        android:layout_height="wrap_content"       
        android:layout_gravity="center_horizontal"
        android:text="No active request"
        android:textColor="@color/gray"
        android:textSize="20dip"
        android:paddingLeft="20dip"
         android:paddingRight="20dip"/>
         
         </LinearLayout>  

        <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/gray"
                android:layout_marginTop="5dip"
                android:layout_marginLeft="5dip"/>
 <LinearLayout 
     android:id="@+id/show_active_req_carpoollayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"> 
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20dip"
                android:text="Daily Carpool"
                android:layout_marginTop="5dip"
                android:layout_marginLeft="5dip"
                android:layout_gravity="center_horizontal" />
        
         <TextView 
             android:id="@+id/show_active_req_carpooldetails"
             android:layout_width="match_parent"
        android:layout_height="wrap_content"       
        android:layout_gravity="center_horizontal"
        android:text="No active request"
        android:textColor="@color/gray"
        android:textSize="20dip"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"/>       
    
 </LinearLayout>
  <Button
            android:id="@+id/show_active_req_newreqbutton"
            android:textSize="15dip" 
            android:textColor="@color/white" 
            android:layout_gravity="center_horizontal"
             android:background="@drawable/green_gradient_btn_selector"
             android:layout_marginTop="20dip"                        
             android:layout_width="wrap_content"
             android:layout_height="30dip"
             android:paddingLeft="3dip"
             android:paddingRight="3dip"
             android:text="No,I will put new request"
             />     
 
</LinearLayout>