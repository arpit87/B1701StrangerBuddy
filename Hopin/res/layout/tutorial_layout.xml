<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_centerHorizontal="true"
             android:orientation="vertical" >

             <TextView
                 android:id="@+id/tutorial_welcometext"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_horizontal"
                 android:paddingTop="25.0dip"
                 android:text="Welcome"
                 android:textAppearance="?android:textAppearanceLarge"
                 android:textColor="@color/light_gray"
                 android:textSize="30dip"
                 android:textStyle="italic" />

             <TextView
                 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_horizontal"
                 android:text="to"
                 android:textAppearance="?android:textAppearanceLarge"
                 android:textColor="@color/light_gray"
                 android:textSize="30dip"
                 android:textStyle="italic" />

             <TextView
           
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_horizontal"
                 android:text="hopin"
                 android:textAppearance="?android:textAppearanceLarge"
                 android:textColor="@color/frame_green"
                 android:textSize="30dip" />

             <TextView
                 android:id="@id/tutorial_welcometext"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_horizontal"
                 android:layout_marginTop="20dip"
                 android:gravity="center_horizontal"
                 android:text="Lets take a tour"
                 android:textAppearance="?android:textAppearanceLarge"
                 android:textColor="@color/frame_blue"
                 android:textSize="30dip" />

             <ImageView
                 android:id="@+id/scene0_scrollArrow"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:src="@drawable/intro_dottedarrow" />

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_horizontal"
                 android:paddingBottom="20.0dip"
                 android:text="Scroll Down"
                 android:textAppearance="?android:textAppearanceSmall"
                 android:textColor="#ffa9a9a9" />

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_horizontal"
                 android:gravity="center_horizontal"                 
                 
                 android:paddingLeft="40dip"
                 android:paddingRight="40dip"
                 android:text="Hopin is platform for people to connect to nearby users who are going same way"
                 android:textAppearance="?android:textAppearanceLarge"
                 android:textColor="@color/light_gray"
                 android:textSize="20dip" />
              <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_horizontal"
                 android:gravity="center_horizontal"
                 android:paddingLeft="40dip"
                 android:paddingRight="40dip"
                 android:text="INSTANTLY!"
                 android:textAppearance="?android:textAppearanceLarge"
                 android:textColor="@color/frame_red"
                 android:textSize="20dip" />

             <View
                 android:layout_width="match_parent"
                 android:layout_height="1dip"
                 android:layout_centerHorizontal="true"
                 android:layout_gravity="center_horizontal"
                 android:layout_marginTop="10dip"
                 android:background="@color/gray"
                 android:layout_marginLeft="20dip"
                 android:layout_marginRight="20dip" />
             
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_horizontal"
                 android:paddingTop="20.0dip"
                 android:text="Begin with search button"
                 android:textAppearance="?android:textAppearanceSmall"
                 android:textColor="@color/very_dark_gray" />
             <RelativeLayout 
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
                 <ImageView  
                     android:id="@+id/tutorial_search_icon"
                     android:layout_width="wrap_content" 
                     android:layout_height="wrap_content" 
                     android:layout_centerHorizontal="true"
                     android:src="@drawable/search_icon"
                     android:layout_alignParentTop="true"
                     android:layout_marginTop="10dip"
                     />

                    <ImageView
                        android:id="@+id/arrow_plan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/tutorial_search_icon"
                        android:layout_marginTop="50dip"
                        android:src="@drawable/intro_arrowright" />

                    <ImageView
                        android:id="@+id/arrow_insta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="50dip"
                        android:layout_toLeftOf="@+id/tutorial_search_icon"
                        android:src="@drawable/intro_arrowleft" />
                    
                      <TextView
                          android:id="@+id/tutorial_insta_text"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                   
                      android:layout_marginTop="115dip" 
                     android:padding="5dip"
                     android:background="@drawable/tab_gradient_green"
                     android:gravity="center_horizontal"
                     android:text="Insta"
                     android:layout_marginLeft="80dip"
                     android:textColor="@color/black"
                     android:textSize="20dip" />

                 <TextView
                     android:id="@+id/tutorial_plan_text"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:padding="5dip"
                     
                     android:layout_marginTop="115dip"  
                     android:layout_alignParentRight="true"    
                     android:layout_marginRight="80dip"             
                     android:background="@drawable/tab_gradient_green"
                     android:gravity="center_horizontal"
                     android:text="Plan"
                     android:textColor="@color/black"
                     android:textSize="20dip" />
             </RelativeLayout>
          
               <View
                 android:layout_width="match_parent"
                 android:layout_height="1dip"
                 android:layout_centerHorizontal="true"
                 android:layout_gravity="center_horizontal"
                 android:layout_marginTop="10dip"
                 android:background="@color/gray"
                 android:layout_marginLeft="20dip"
                 android:layout_marginRight="20dip" />
               
             <EditText       
                 
         android:id="@+id/tutorial_name_edittext"         
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"   
        android:textSize="15dip"     
        android:layout_marginLeft="15dip" 
        android:layout_marginRight="15dip"          
        android:textColor="@color/black"
        android:background="@drawable/gray_green_background_selector" 
        android:gravity="left"  
        android:paddingLeft="10dip"
        android:hint="Enter name"  
        android:layout_marginTop="20dip"      
        /> 
        
             <EditText        
         android:id="@+id/tutorial_mobile_edittext"         
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"   
        android:textSize="15dip"     
        android:layout_marginLeft="15dip" 
        android:layout_marginRight="15dip"          
        android:textColor="@color/black"
        android:background="@drawable/gray_green_background_selector" 
        android:gravity="left"  
        android:paddingLeft="10dip"
       android:layout_marginTop="20dip"
        android:hint="Optional mobile number(kept secret)"        
        /> 
        
        <Button
              android:id="@+id/tutorial_startbutton"
            android:textSize="20dip" 
            android:textColor="@color/white" 
            android:layout_gravity="center_horizontal"
            
             android:background="@drawable/red_gradient_btn_selector"
             android:layout_marginTop="20dip"                        
             android:layout_width="wrap_content"
             android:layout_height="30dip"
             android:paddingLeft="3dip"
             android:paddingRight="3dip"
             android:text="Get Started"
             />     
         </LinearLayout>

    </ScrollView>

</LinearLayout>